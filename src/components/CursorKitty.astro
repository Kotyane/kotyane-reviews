<div class="cursor-kitten">
  <svg
    width="40"
    height="40"
    viewBox="0 0 40 40"
    xmlns="http://www.w3.org/2000/svg"
    style="image-rendering: pixelated;"
  >
    <circle cx="20" cy="20" r="18" fill="#fff" stroke="#000" stroke-width="1"
    ></circle>

    <polygon points="8,8 14,2 18,8" fill="#fff" stroke="#000" stroke-width="1"
    ></polygon>

    <polygon points="22,8 26,2 32,8" fill="#fff" stroke="#000" stroke-width="1"
    ></polygon>

    <circle cx="14" cy="20" r="2" fill="#000"></circle>

    <circle cx="26" cy="20" r="2" fill="#000"></circle>

    <polygon points="20,24 18,28 22,28" fill="#000"></polygon>

    <line x1="10" y1="24" x2="2" y2="22" stroke="#000" stroke-width="1"></line>
    <line x1="10" y1="26" x2="2" y2="26" stroke="#000" stroke-width="1"></line>
    <line x1="10" y1="28" x2="2" y2="30" stroke="#000" stroke-width="1"></line>

    <line x1="30" y1="24" x2="38" y2="22" stroke="#000" stroke-width="1"></line>
    <line x1="30" y1="26" x2="38" y2="26" stroke="#000" stroke-width="1"></line>
    <line x1="30" y1="28" x2="38" y2="30" stroke="#000" stroke-width="1"></line>

    <path d="M35 30 Q45 35 35 40" stroke="#000" stroke-width="1" fill="none"
    ></path>

    <circle cx="14" cy="30" r="2" fill="#fff" stroke="#000" stroke-width="1"
    ></circle>
    <circle cx="26" cy="30" r="2" fill="#fff" stroke="#000" stroke-width="1"
    ></circle>
  </svg>
</div>

<style>
  .cursor-kitten {
    position: fixed;
    width: 40px;
    height: 40px;
    pointer-events: none;

    transform: translate(-50%, -50%) translate(20px, 20px);
    z-index: 1000;
  }
  .footprint {
    position: fixed;
    width: 20px;
    height: 20px;
    pointer-events: none;
    transform: translate(-50%, -50%);
    animation: fadeFootprint 3s forwards;
    z-index: 500;
    box-shadow: 0 0 5px #fff;
  }
  @keyframes fadeFootprint {
    from {
      opacity: 1;
    }
    to {
      opacity: 0;
    }
  }
</style>

<script client:load>
  const kitten = document.querySelector(".cursor-kitten");
  document.addEventListener("mousemove", (event) => {
    const offsetX = 20;
    const offsetY = 20;
    kitten.style.left = event.clientX + offsetX + "px";
    kitten.style.top = event.clientY + offsetY + "px";
  });
</script>
